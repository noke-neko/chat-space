.side-bar  
  .side-bar__user-name
    .top-items
      %p.top-items__name
        = current_user.name
      %ul.top-items__icons
        %li.list
        = link_to new_group_path, class: "top-items__crate-group" do
          = icon('fas', 'edit', class: "top-items__btn--left")
        %li.list
        = link_to edit_user_path(current_user), class: "top-items__edit-account" do
          = icon('fas', 'cog', class: "top-items__btn--right")
  .side-bar__group-lists
    - current_user.groups.each do |group|
      .group-list
        = link_to '#' do
          .group-list__name
            = group.name
          .group-list__message
            メッセージはまだありません